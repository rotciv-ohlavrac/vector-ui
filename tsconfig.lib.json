{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.lib.tsbuildinfo",
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "declaration": true, // Enable declaration file generation
    "emitDeclarationOnly": true, // Only output .d.ts files
    "outDir": "dist", // Output directory for .d.ts files
    "jsx": "react-jsx", // Add this line: Specifies JSX handling
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "pathsToAliases": true,
    /* Path Aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": ["lib/*"]
    }
  },
  "include": ["lib"],
  "exclude": ["lib/**/*.test.ts", "lib/**/*.spec.ts"] // Optional: exclude test files
}
